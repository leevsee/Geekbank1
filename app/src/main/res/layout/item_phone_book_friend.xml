<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/avatar_image_views"
        android:src="@drawable/ic_lu"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/name_text_views"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/avatar_image_views"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/age_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/name_text_views"
        android:layout_toRightOf="@id/avatar_image_views"
        android:text="4岁"
        />

</RelativeLayout>